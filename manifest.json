{
  "manifest_version": 2,
  "name": "Scratch Fullscreen",
  "description": "Actual Fullscreen feature for Scratch (scratch.mit.edu)",
  "version": "1",
  "author": "Teramoto Daiki",
  "short_name": "Scratch Fullscreen",
  "icons": {
    "16": "icons/i16.png",
    "48": "icons/i48.png",
    "128": "icons/i128.png"
  },
  "minimum_chrome_version": "33",
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["https://scratch.mit.edu/*"],
      "all_frames": true
    }
  ]
}
